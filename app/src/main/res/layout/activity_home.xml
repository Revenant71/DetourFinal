<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/parent1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <ImageView
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/drawer"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="109dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_small" />

                <ImageView
                    android:layout_width="21.12dp"
                    android:layout_height="23.69dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:background="@drawable/search"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="330.39dp"
                    android:layout_height="204.62dp"
                    android:layout_gravity="center"
                    android:src="@drawable/adhome" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/scrolldot"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Menu"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_marginLeft="40dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="360dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/navAll"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/allbutton" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/coffee"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="top|center"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/soda"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="top|center"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/snacks"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="top|center"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/silogmeals"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="top|center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="410dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="All"
                    android:layout_marginLeft="33dp"/>

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="40dp"
                    android:text="Coffee"
                    android:layout_marginLeft="29dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Soda"
                    android:layout_marginLeft="42dp"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Snacks"
                    android:layout_marginLeft="37dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Silog Meals"
                    android:layout_marginLeft="23dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="445dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/firstcard"
                    android:layout_width="149.44dp"
                    android:layout_height="211.63dp"
                    android:backgroundTint="@color/grey2"
                    app:cardCornerRadius="18dp"
                    android:layout_marginLeft="35dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/caramelmacchiato"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Caramel Macchiato"
                        android:layout_marginTop="155.5dp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Php 150"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="170.13dp"/>

                    <ImageView
                        android:layout_width="32.08dp"
                        android:layout_height="32.08dp"
                        android:layout_marginTop="173.21dp"
                        android:layout_marginLeft="108.7dp"
                        android:layout_marginRight="8.67dp"
                        android:layout_marginBottom="6.33dp"
                        android:background="@drawable/addbutton2"
                        android:text="Click Me" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/secondcard"
                    android:layout_width="149.44dp"
                    android:layout_height="211.63dp"
                    android:backgroundTint="@color/grey2"
                    app:cardCornerRadius="18dp"
                    android:layout_marginLeft="220dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/spamsilog"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Spamsilog"
                        android:layout_marginTop="155.5dp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Php 150"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="170.13dp"/>

                    <ImageView
                        android:layout_width="32.08dp"
                        android:layout_height="32.08dp"
                        android:layout_marginTop="173.21dp"
                        android:layout_marginLeft="108.7dp"
                        android:layout_marginRight="8.67dp"
                        android:layout_marginBottom="6.33dp"
                        android:background="@drawable/addbutton2"
                        android:text="Click Me" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/thirddcard"
                    android:layout_width="149.44dp"
                    android:layout_height="211.63dp"
                    android:backgroundTint="@color/grey2"
                    app:cardCornerRadius="18dp"
                    android:layout_below="@id/firstcard"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/kwek"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Kwek-kwek"
                        android:layout_marginTop="155.5dp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Php 40"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="170.13dp"/>

                    <ImageView
                        android:layout_width="32.08dp"
                        android:layout_height="32.08dp"
                        android:layout_marginTop="173.21dp"
                        android:layout_marginLeft="108.7dp"
                        android:layout_marginRight="8.67dp"
                        android:layout_marginBottom="6.33dp"
                        android:background="@drawable/addbutton2"
                        android:text="Click Me" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fourthcard"
                    android:layout_width="149.44dp"
                    android:layout_height="211.63dp"
                    android:backgroundTint="@color/grey2"
                    app:cardCornerRadius="18dp"
                    android:layout_below="@id/secondcard"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="220dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/pepsi"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="Pepsi"
                        android:layout_marginTop="155.5dp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Php 150"
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="170.13dp"/>

                    <ImageView
                        android:layout_width="32.08dp"
                        android:layout_height="32.08dp"
                        android:layout_marginTop="173.21dp"
                        android:layout_marginLeft="108.7dp"
                        android:layout_marginRight="8.67dp"
                        android:layout_marginBottom="6.33dp"
                        android:background="@drawable/addbutton2"
                        android:text="Click Me" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>


</FrameLayout>